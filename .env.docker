# Environment variables for Docker Compose development setup

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=secure_password_123
MONGODB_URI=mongodb://admin:secure_password_123@mongo:27017/crewai_pentest?authSource=admin

# MongoDB Express Configuration
MONGOEXPRESS_LOGIN=admin
MONGOEXPRESS_PASSWORD=admin

# Ollama Configuration
OLLAMA_HOST=http://ollama:11434

# Redis Configuration
REDIS_PASSWORD=redis_password_123

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=info
DEBUG=true

# Azure Configuration (for production deployment)
AZURE_KEYVAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# Application Insights (Azure Monitoring)
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key

# Security Configuration
SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here

# Penetration Testing Tool Configuration
NMAP_PATH=/usr/bin/nmap
SQLMAP_PATH=/usr/bin/sqlmap
NIKTO_PATH=/usr/bin/nikto

# AI Model Configuration
AI_MODEL=deepseek-r1:1.5b
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=4000

# Logging Configuration
LOG_FILE_PATH=/app/logs/pentest-ai.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30
